@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/User/css/Product/DetailCSS.css" rel="stylesheet" />
<div class="row">
    <div class="row-box">
        <h5>
            DANH MỤC SẢN PHẨM
            <i class="far fa-hand-point-down"></i>
        </h5>
        <span>
            <i class="fas fa-map-marker-alt"></i>
            Địa chỉ: 123 Bình Giã, Vũng Tàu
        </span>
        <span>
            <i class="fas fa-phone-alt"></i>
            Hotline: 1900.0702
        </span>
    </div>
</div>

<div class="product-category">
    <ul>
        <li><a href="#"><img src="//cdn.tgdd.vn/Brand/1/iPhone-(Apple)42-b_16.jpg"></a></li>
        <li><a href="#"><img src="//cdn.tgdd.vn/Brand/1/Samsung42-b_25.jpg"></a></li>
        <li><a href="#"><img src="//cdn.tgdd.vn/Brand/1/OPPO42-b_57.jpg"></a></li>
        <li><a href="#"><img src="//cdn.tgdd.vn/Brand/1/Xiaomi42-b_31.png"></a></li>
        <li><a href="#"><img src="//cdn.tgdd.vn/Brand/1/Huawei42-b_30.jpg"></a></li>
        <li><a href="#"><img src="//cdn.tgdd.vn/Brand/1/Realme42-b_37.png"></a></li>
        <li><a href="#"><img src="//cdn.tgdd.vn/Brand/1/Vsmart42-b_40.png"></a></li>
        <li><a href="#"><img src="//cdn.tgdd.vn/Brand/1/Nokia42-b_21.jpg"></a></li>
        <li><a href="#"><img src="//cdn.tgdd.vn/Brand/1/Coolpad42-b_33.png"></a></li>
        <li><a href="#"><img src="//cdn.tgdd.vn/Brand/1/Asus-(Zenfone)42-b_14.jpg"></a></li>
        <li><a href="#"><img src="//cdn.tgdd.vn/Brand/1/BlackBerry42-b_38.png"></a></li>
        <li><a href="#"><img src="//cdn.tgdd.vn/Brand/1/Mobiistar42-b_20.jpg"></a></li>
    </ul>
</div>
<div class="product-detail">
    <div class="product-detail__title">
        <h2>Điện thoại @ViewBag.Product.Product_Name</h2>
    </div>
    <div class="product-detail__content">
        <div class="product-image">
            <img src="~/images/@ViewBag.Product.Product_ImageThumbnail" alt="image">
        </div>
        <div class="product-xxx">
            <h2 class="product-price">@ViewBag.Product.Product_Price.ToString("#,###")</h2>
            <div class="product-info">
                <table>
                    <tr>
                        <th class="product-info__label" colspan="2">Hệ điều hành - CPU</th>
                    </tr>
                    <tr>
                        <td>Hệ điều hành:</td>
                        <td>@ViewBag.Product.Product_OperatingSystem</td>
                    </tr>
                    <tr>
                        <td>Chipset(Hãng SX CPU):</td>
                        <td>@ViewBag.Product.Product_Chipset</td>
                    </tr>
                    <tr>
                        <td>Tốc độ CPU:</td>
                        <td>@ViewBag.Product.Product_CPUSpeed</td>
                    </tr>
                    <tr>
                        <td>Chip đồ họa (GPU):</td>
                        <td>@ViewBag.Product.Product_GPU</td>
                    </tr>
                    <tr>
                        <th class="product-info__label" colspan="2">Màn hình</th>
                    </tr>
                    <tr>
                        <td>Độ phân giải:</td>
                        <td>@ViewBag.Product.Product_ScreenResolution</td>
                    </tr>
                    <tr>
                        <td>Màn hình rộng:</td>
                        <td>@ViewBag.Product.Product_ScreenWidth</td>
                    </tr>
                    <tr>
                        <th class="product-info__label" colspan="2">Bộ nhớ & lưu trữ</th>
                    </tr>
                    <tr>
                        <td>RAM:</td>
                        <td>@ViewBag.Product.Product_RAM</td>
                    </tr>
                    <tr>
                        <td>Bộ nhớ trong:</td>
                        <td>@ViewBag.Product.Product_ROM</td>
                    </tr>
                    <tr>
                        <td>Hỗ trợ thẻ nhớ:</td>
                        @if (ViewBag.Product.Product_SDCardSupport == true)
                        {
                            <td>Có</td>
                        }
                        else
                        {
                            <td>Không</td>
                        }
                    </tr>
                    <tr>
                        <td>Thẻ nhớ ngoài:</td>
                        <td>@ViewBag.Product.Product_SDCard</td>
                    </tr>
                    <tr>
                        <th class="product-info__label" colspan="2">Camera</th>
                    </tr>
                    <tr>
                        <td>Camera trước:</td>
                        <td>@ViewBag.Product.Product_FrontCamera</td>
                    </tr>
                    <tr>
                        <td>Camera sau:</td>
                        <td>@ViewBag.Product.Product_RearCamera</td>
                    </tr>
                </table>
            </div>
            <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@ViewBag.Product.Product_Id">THÊM VÀO GIỎ HÀNG</a>
        </div>
        <div class="product-related">
            <h2>Các sản phẩm khác</h2>
            <ul>
                @foreach (var p in Model)
                {
                    <li>
                        <a asp-action="Detail" asp-route-id="@p.Product_Id">
                            <img src="~/images/@p.Product_ImageThumbnail" alt="image">
                        </a>
                        <span>@p.Product_Name</span>
                    </li>
                }
            </ul>
        </div>
        <div class="product-description">
            <h2>Mô tả</h2>
            <p>@ViewBag.Product.Product_Description</p>
        </div>
    </div>
</div>

